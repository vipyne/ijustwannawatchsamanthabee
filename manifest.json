{
  "manifest_version": 2,
  "name": "I just wanna watch Samantha Bee",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "http://samanthabee.com/archives/"
      ],
      "js": ["samBarchives.js"]
    },
    {
      "matches": [
        "http://samanthabee.com/episode/*"
      ],
      "js": ["samB.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "http://samanthabee.com/archives/",
    "http://samanthabee.com/episode/*",
    "*://*/*",
    "tabs"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon128.png",
    "icons": { "16": "icon16.png",
               "48": "icon48.png",
              "128": "icon128.png" },
    "default_title": "I just wanna watch Samantha Bee"
  }
}
